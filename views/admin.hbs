<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="admin.css">

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<span class="text">PAPERTRAY</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="#"  class="nav-link" id="dashboard-link">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="#" class="nav-link" id="sales-link">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">Sales</span>
				</a>
			</li>
			<li>
				<a href="#" class="nav-link" id="users-link">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Users</span>
				</a>
			</li>
			<li>
				<a href="#" class="nav-link" id="agents-link">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">Agents</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog' ></i>
					<span class="text">Settings</span>
				</a>
			</li>
			<li>
				<a href="/" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="/auth/adminsearch">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn" id="search"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			
            <div id="dashboard-content">
				<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			
			</div>
			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>{{totalOrders}}</h3>
						<p>ORDERS</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-group' ></i>
					<span class="text">
						<h3>{{totalUsers}}</h3>
						<p>TOTAL USERS</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3>{{totalCost}} TK</h3>
						<p>Total Sales</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent Orders</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>User</th>
								<th>Date Order</th>
								<th>Status</th>
							</tr>
						</thead>
                       
						<tbody>
					 {{#each orders}}
                      <tr class="order-row">
                     <td>{{orderId}}</td>
                      <td>{{order_date}}</td>
                    <td class="status-column" data-pickup-date="{{pickup_date}}" data-status ="{{status}}"></td>
							
						</tbody>
                         {{/each}}
					</table>
				</div>
				
			</div>
			 </div>
            
			
			
      

	  <div id="sales-content" style="display: none;">
			<div id="dashboard-content">
				<div class="head-title">
				<div class="left">
					<h1>Sales</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Sales</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			
			</div>
			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>{{totalOrders}}</h3>
						<p>ORDERS</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle'></i>
					<span class="text">
						<h3>{{totalCost}} TK</h3>
						<p>TOTAL Sales</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3>{{totalfifteen}} TK</h3>
						<p>Total Revenue</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent Orders</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>Order Cost</th>
								<th>Revenue</th>
								<th>OrderId</th>
							</tr>
						</thead>
                       
						<tbody>
					 {{#each orders}}
                      <tr class="order-row">
                     <td>{{totalcost}}</td>
                       <td>{{fifteenPercent}}</td>
                    <td > {{orderId}} </td>
							 {{/each}}
							
						</tbody>
                        
					</table>
				</div>
				
			</div>
			</div>
	  </div>



          <div id="user-content" style="display: none;">
				<div id="dashboard-content">
				<div class="head-title">
				<div class="left">
					<h1>Users</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Users</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			
			</div>
			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>{{totalUsers}}</h3>
						<p>Total Users</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Users</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>User ID</th>
								<th>User Name</th>
								
								<th>Email</th>
								<th>Phone Number</th>
							</tr>
						</thead>
                       
						<tbody>
					 {{#each users}}
                      <tr class="order-row">
					 <td>{{id}}</td>
                     <td>{{username}}</td>
                       <td>{{email}}</td>
                    <td > {{phone}} </td>
						{{/each}}
							
						</tbody>
                        
					</table>
				</div>
				
			</div>
			</div>
		  </div>



        
          <div id="agent-content" style="display: none;">
				<div id="dashboard-content">
				<div class="head-title">
				<div class="left">
					<h1>Agents</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Agents</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			
			</div>
			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>{{totalAgents}}</h3>
						<p>Total Agents</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Users</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>Agent Name</th>
								<th>Email</th>
								<th>Campus Name</th>
								<th>Address</th>
							</tr>
						</thead>
                       
						<tbody>
					 {{#each agents}}
                      <tr class="order-row">
                     <td>{{agent_name}}</td>
                       <td>{{email}}</td>
                    <td > {{campus_name}} </td>
                    <td > {{agent_address}} </td>
						{{/each}}
							
						</tbody>
                        
					</table>
				</div>
				
			</div>
			</div>
		  </div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	

	<script src="admin.js"></script>
</body>
</html>