<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="admin.css">

	<title>Agent</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<span class="text">PAPERTRAY</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="#"  class="nav-link" id="dashboard-link">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="#" class="nav-link" id="sales-link">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">My Earnings</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#" class="nav-link" id="setting-link">
					<i class='bx bxs-cog' ></i>
					<span class="text">Settings</span>
				</a>
			</li>
			<li>
				<a href="/carrerlogin" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="/auth/adminsearch">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn" id="search"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			
            <div id="dashboard-content">
				<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			
			</div>
			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>{{totalOrders}}</h3>
						<p>ORDERS</p>
					</span>
				</li>

				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3>{{ totalCost }} TK</h3>
						<p>Total Sales</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent Orders</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>Order ID</th>
								<th>Paper Size</th>
								<th>Color</th>
								<th>Finisher</th>
								<th>Quantity</th>
								<th>Totalpage</th>
								<th>Order Date</th>
								<th>File</th>
							</tr>
						</thead>
                       
						<tbody>
					 {{#each orders}}
                      <tr class="order-row">
                     <td>{{orderId}}</td>
                     <td>{{paper_size}}</td>
                     <td>{{color}}</td>
                     <td>{{finisher}}</td>
                     <td>{{quantity}}</td>
                     <td>{{totalpage}}</td>
                      <td>{{order_date}}</td>   
                      <td>{{file}}</td>
                     
							
						</tbody>
                         {{/each}}
					</table>
				</div>
				
			</div>
			 </div>
            
			
			
      

	  <div id="sales-content" style="display: none;">
			<div id="dashboard-content">
				<div class="head-title">
				<div class="left">
					<h1>Sales</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Sales</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			
			</div>
			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>{{totalOrders}}</h3>
						<p>ORDERS</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle'></i>
					<span class="text">
						<h3>{{totalCost}} TK</h3>
						<p>TOTAL Sales</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3>{{seventyFivePercentTotalCost}} TK</h3>
						<p>Total Revenue</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent Orders</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>Order Cost</th>
								<th>Revenue</th>
								<th>OrderId</th>
							</tr>
						</thead>
                       
						<tbody>
					 {{#each orders}}
                      <tr class="order-row">
                     <td>{{totalcost}}</td>
                       <td>{{seventyFivePercent}}</td>
                    <td > {{orderId}} </td>
							 {{/each}}
							
						</tbody>
                        
					</table>
				</div>
				
			</div>
			</div>
	  </div>

       <div id="setting-content" style="display: none;">
        <div class="card">
        <div class="profile-pic">
            <img src="/image/uploaded_images/{{ user.profile_image }}" alt="Profile Image" >
        </div>
        <h2 class="card__title">{{ agents.agent_name }}</h2>
        <form action="/auth/agentsetting" method="POST" enctype="multipart/form-data">
           
            <input type="hidden" name="userid" id="userid" value="{{ agents.id}}" >
            <label for="username">Username</label>
            <input type="text" name="username" id="username" value="{{ agents.agent_name }}" required>
            
            <label for="email">Email</label>
            <input type="email" name="email" id="email" value="{{ agents.email }}" required>
            
            <label for="phone">First Name</label>
            <input type="tel" name="firstname" id="firstname" value="{{ agents.first_name }}">
            <label for="phone">last Name</label>
            <input type="tel" name="lastname" id="lastname" value="{{ agents.last_name }}"> 
              <label for="phone">campus</label>
            <input type="tel" name="lastname" id="lastname" value="{{ agents.campus_name }}">
            
             <label for="profileImage">Profile Image</label>
            <input type="file" name="profileImage" id="profileImage" accept="image/*" >
            
            <button type="submit">Save Changes</button>
        </form>
    </div>
       </div>

          
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	

	<script src="admin.js"></script>
</body>
</html>